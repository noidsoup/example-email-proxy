Resources:
  AWSEBAutoScalingGroup:
    Metadata:
      AWS::CloudFormation::Authentication:
        S3Auth:
          type: "s3"
          buckets: ["elasticbeanstalk-us-west-1-154847616911"]
          roleName:
            "Fn::GetOptionSetting":
              Namespace: "aws:autoscaling:launchconfiguration"
              OptionName: "IamInstanceProfile"
              DefaultValue: "aws-elasticbeanstalk-ec2-role"

commands:
  01-get-file:
    command: "aws s3 cp s3://elasticbeanstalk-us-west-1-154847616911/helios-email-service/.env /usr/src/app"
  02-list-dir:
    command: "ls -a"
  03-list-app-dir:
    command: "ls /usr/src/app -a"
